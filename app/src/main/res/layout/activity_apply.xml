<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_margin="15dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:backgroundTint="#FFFFFF"
            app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingTop="20dp"
            android:text="A bill of ordinances"
            android:textColor="#21427D"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:padding="20dp">

        <RadioButton
            android:id="@+id/rbtnEnactment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Enactment"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rbtnAbolition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Abolition"
            android:layout_weight="1" />

        <RadioButton
            android:id="@+id/rbtnRevision"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Revision"
            android:layout_weight="1" />
    </RadioGroup>

    <EditText
        android:id="@+id/txtContent1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Ordinance Subject to Claim \nand Purpose of Claim"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="15"
        android:minLines="6"
        android:scrollbars="vertical" />

    <EditText
        android:id="@+id/txtContent2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Reason"
        android:inputType="textMultiLine"
        android:lines="8"
        android:maxLines="8"
        android:minLines="3"
        android:scrollbars="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/txtFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Please submit the attached file."
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnFile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:background="#21427D"
            android:textColor="#FFFFFF"
            android:text="Submit" />
    </LinearLayout>

    <Button
        android:id="@+id/btnApply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#21427D"
        android:layout_margin="10dp"
        android:text="Apply"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />
</LinearLayout>